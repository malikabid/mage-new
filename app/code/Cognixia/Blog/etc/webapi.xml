<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/posts" method="GET">
        <service class="Cognixia\Blog\Api\PostRepositoryInterface" method="getList" />
        <resources>
            <resource ref="self" />
        </resources>
    </route>

    <route method="GET" url="/V1/posts/:id">
        <service class="Cognixia\Blog\Api\PostRepositoryInterface" method="getPost" />
        <resources>
            <resource ref="self" />
        </resources>
    </route>
</routes>